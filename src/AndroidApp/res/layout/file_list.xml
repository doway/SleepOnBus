    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mPath"
        style="@style/subTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pleaseChooseAlertSound" >
    </TextView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>